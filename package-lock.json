name: Generate package-lock.json

on:
  workflow_dispatch:
  push:
    branches:
      - main

jobs:
  generate-lock:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          persist-credentials: true

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install dependencies and generate package-lock.json
        run: |
          # Si ya existe package-lock.json, npm ci lo usar√°; si no, generamos el lockfile
          npm install --package-lock-only

      - name: Commit package-lock.json if changed
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git add package-lock.json || true
          if ! git diff --cached --quiet; then
            git commit -m "chore: generate package-lock.json (CI)" || true
            git push
          else
            echo "No changes to commit"
          fi
